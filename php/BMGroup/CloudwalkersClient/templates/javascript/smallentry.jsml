{{#url}}<a href="{{url}}">{{/url}}
	<div class='pull-right'>
		{{#istrending}}<span class="date">{{trending}}</span>{{/istrending}}
		{{^istrending}}{{#date}}<span class="date" data-date="{{date}}"></span>{{/date}}{{/istrending}}
		<div class="media">
			<div class="dot {{networktoken}}-color"></div>
			<i class="icon-{{media}}"></i>
		</div>
	</div>
	
	{{#from}}
	{{#iconview}}
		<i class="icon-{{icon}}"></i>
	{{/iconview}}
	{{^iconview}}
		<img class="avatar" alt="" src="{{avatar}}">
	{{/iconview}}
		<strong>{{displayname}}</strong>
	{{/from}}

	<div class='content' data-id="{{id}}">
		{{{body.intro}}}
	</div>
{{#url}}</a>{{/url}}
<div class="messages-counter">
	<div class="header">
		<h3>{{name}}</h3>
		<p class="number">{{message_count}}</p>
		<p class="messages">Messages</p>
	</div>

	<div class="scroller" data-height="360px" data-always-visible="1" data-rail-visible1="1">
		<ul class="streams">
			{{#streams}}
				<li>
					<i class="icon-{{network.icon}}"></i>
					<h4>{{name}}</h4>
					<p class="number">{{message_count}}</p>

					<div class="clearer"></div>
				</li>
			{{/streams}}
		</ul>
	</div>
</div>
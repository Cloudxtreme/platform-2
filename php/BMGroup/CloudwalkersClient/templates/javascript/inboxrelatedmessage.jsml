<div class="message-header {{icon}}-color" data-id="{{id}}">
	<div class="inherit">
		{{#from}}
		<div class="pull-right">
			<span class="date" {{#date}}data-date="{{date}}"{{/date}}></span>
		</div>
		
		<img class="avatar viewdetails" data-action="viewcontact" alt="" src="{{avatar}}">
		<a class="viewdetails" data-action="viewcontact">{{displayname}}</a>
		{{/from}}
	</div>
</div>

<div class="message-body">
	{{#attachments}}
		{{#image}}
			<img src="{{url}}" class="pull-right attachment-image" alt="{{name}}" />
		{{/image}}
	{{/attachments}}
	
	{{{body.html}}}
	
	{{#attachments}}
		{{#link}}
			<div class="attachment-link">
				<i class="icon-link"></i> <a href="{{url}}" target="_blank">{{shortlink}}</a>
			</div>
		{{/link}}
	{{/attachments}}
</div>

<div class="message-actions">
	
	{{#actions}}
		<div class="btn-white" data-action="{{token}}"><i class="icon-{{icon}}"></i></div>
	{{/actions}}
	
	<!-- TAGS -->
	<div class="message-tags pull-right">
		{{#authorized.ACCOUNT_TAGS_MANAGE}}
			<div class="btn-white pull-right edit" data-action="tag-showedit"><i class="icon-tags"></i></div>
			<ul class="tag-list"></ul>
			<div class="tag-input-append">
				<input id="tags" type="text" autocomplete="off">
				<button class="btn-white" type="button" data-action="tag-add">{{translate_add}} <i class="icon-tag"></i></button>
			</div>
		{{/authorized.ACCOUNT_TAGS_MANAGE}}
		{{^authorized.ACCOUNT_TAGS_MANAGE}}
			{{#authorized.ACCOUNT_TAGS_VIEW}}
				<ul class="tag-list"></ul>
			{{/authorized.ACCOUNT_TAGS_VIEW}}
		{{/authorized.ACCOUNT_TAGS_MANAGE}}
	</div>
	<!-- END TAGS -->
</div>
<div style="clear:both"></div>

<!-- NOTES_ROLE -->
<div class="message-notes">
	<div class="note-content"></div>
	<ul class="note-list"></ul>
</div>

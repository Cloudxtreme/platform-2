<h3>{{title}}</h3>

<form>
	{{#input.string}}
		<div class="form-group">
			<label>{{name}}</label>
			<textarea type="text" name="{{token}}" class="m-wrap" rows="5" style="width: 95%">{{value}}</textarea>
		</div>
	{{/input.string}}

	<button type="submit" class="btn">{{action.name}}</button>
</form>
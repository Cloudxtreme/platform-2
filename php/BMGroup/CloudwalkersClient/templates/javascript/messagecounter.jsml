<!-- BEGIN PORTLET-->
<div class="portlet box {{color}} messagecounter">
	<div class="portlet-title line">
		<div class="caption"><i class="icon-{{icon}}"></i>{{title}} <i class='icon-chevron-down'></i></div>
		<div class="tools">
			
			<!-- triggered in app.js -->
			<a href="" class="collapse">{{message_count}}</a>

		</div>
	</div>
	<div class="portlet-body social-icon-colors">
		<div class="messages-counter">
			
			<div class="messages-header unread-{{message_count}}">
				<p class="number"><strong>{{message_count}}</strong> New</p>
			</div>
		
			<div class="scroller" data-height="240px" data-always-visible="1" data-rail-visible1="1">
				<ul class="messages-stream">
					{{#streams}}
						<li>
							<span class="number unread-{{message_count}}">{{message_count}}</span>
							<i class="icon-{{network.icon}}"></i>
							{{customname}}
							
						</li>
					{{/streams}}
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- END PORTLET-->




<div class="trigger loading">
	<form action="javascript:void(0);"">
		<label class="control-label">{{description}}</label>
		<textarea name="name" placeholder="{{message}}" class="m-wrap inner-loading" value="{{name}}" disable="true"></textarea>

		<div class="submit-btn">
			<button type="submit" data-action="save" class="btn green edit-account">Save changes</button>
			<button type="reset" data-action="reset" class="btn">Reset</button>
		</div>
	</form>
</div>
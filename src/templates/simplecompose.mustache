	{{#modal}}
	<div class="modal-dialog">
		<div class="modal-content">
	{{/modal}}

			<section class="compose-note">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>

					<h3>{{#trans}}Write Note{{/trans}}</h3>
				</div>
				
				<div class="modal-body">
					<textarea>{{text}}</textarea>
				</div>

				<div class="modal-footer toload">
					<button {{^modal}}id="cancel"{{/modal}} class="btn" data-dismiss="modal" aria-hidden="true">{{#trans}}Cancel{{/trans}}</button>
					<button id="post" class="btn btn-primary">{{#trans}}Save{{/trans}}</button>
				</div>
			</section>

	{{#modal}}
		</div>
	</div>
	{{/modal}}
<section class="compose-note">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>

		<h3>{{#trans}}Write Note{{/trans}}</h3>
	</div>
	
	<div class="modal-body">
		<textarea>{{text}}</textarea>
	</div>

	<div class="modal-footer toload">
		<button id="cancel" class="btn btn-primary">{{#trans}}Cancel{{/trans}}</button>
		<button id="post" class="btn btn-primary">{{#trans}}Save{{/trans}}</button>
	</div>
</section>
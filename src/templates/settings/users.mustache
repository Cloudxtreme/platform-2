<div class="tab-pane settings-users row" id="tab_1_2">
	
	<div class="span4">
		<div class="portlet box grey manage-users-edit-widget">
			<div class="portlet-title line">
				<div class="caption"><i class="fa fa-user"></i>{{#trans}}Edit user{{/trans}}</div>
			</div>
			<div class="portlet-body">
				
				<div class="edit-filler">
					<center>{{#trans}}Select user{{/trans}}</center>
				</div>
				
				<form action="#" role="form" style="display: none;">
					
				</form>
			</div>
		</div>
		{{#authorized.USER_INVITE}}
		<div class="collapse-open invite-user">
			<div class="portlet box blue">
				<div class="portlet-title line expand-portlet">
					<div class="caption"><i class="fa fa-envelope-alt"></i>{{#trans}}Invite new user{{/trans}}</div>
					<div class="tools">
						<span class="collapse pull-right"></span>
					</div>
				</div>
				<div class="portlet-body">
					
					<form action="javascript:void(0);" class="users-invite">
						
						<label for="invite-email">{{#trans}}Email{{/trans}}</label>
						<input type="text" name="invite-email" />
						<br/><br/>
						<input type="submit" class="btn green" value="{{#trans}}Invite user{{/trans}}" />
						<span class="loadingafter"></span>
						
						<!--Great spot for pending invitations...-->
					</form>
				</div>
			</div>
		</div>
		{{/authorized.USER_INVITE}}
	</div>
	
	
	<div class="span8">
	
		<div class="portlet box purple">
			<div class="portlet-title">
				<div class="caption"><i class="fa fa-group"></i>{{#trans}}Userlist{{/trans}}</div>
			</div>
			<div class="portlet-body toload">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th></th>
							<th>{{#trans}}Name{{/trans}}</th>
							<th class="hidden-480">{{#trans}}Email{{/trans}}</th>
							<th>{{#trans}}Type{{/trans}}</th>
							<th></th>
						</tr>
					</thead>
					<tbody class="user-container">
						
					</tbody>
				</table>
			</div>
		</div>
		
	</div>
</div>
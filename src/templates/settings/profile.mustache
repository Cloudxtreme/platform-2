<div class="tab-pane row settings-profile active" id="tab_1_1">

	<div class="col-sm-6 col-md-4">
		<div class="collapse-open">
			<div class="panel grey">
				<div class="panel-heading line">
					<i class="fa fa-camera-retro"></i>{{#trans}}Profile picture{{/trans}}
					<div class="tools">
						<span class="collapse pull-right"></span>
					</div>
				</div>
				<div class="panel-body edit-user-avatar">
					
					<div id="user_avatar_big" class="fileupload-new avatar-big" style="background-image: url({{user.avatar}})">
						<span class="loadingafter"></span>
					</div>
					<input type="file" />
					
					{{#authorized.ACCOUNT_SETTINGS}}
						<input id="add-file" class="btn btn-block btn-info" type="button" value="{{#trans}}Select{{/trans}}" />
						<input id="upload-file" class="btn btn-block black" type="button" value="{{#trans}}Upload{{/trans}}" />
					{{/authorized.ACCOUNT_SETTINGS}}

				</div>
			</div>
		</div>
		
		{{#authorized.ACCOUNT_SETTINGS}}
		<div class="collapse-closed">
			<div class="panel blue">
				<div class="panel-heading line expand-portlet">
					<i class="fa fa-key"></i>{{#trans}}Change Password{{/trans}}
					<div class="tools">
						<span class="collapse pull-right"></span>
					</div>
				</div>
				<div class="panel-body">
					
					<form role="form" id="edit-user-password">
						<div class="form-group">
						    <label>{{#trans}}Current Password{{/trans}}</label>
						    <input type="password" name="pass0" class="form-control">
						</div>
						<div class="form-group">
						    <label>{{#trans}}New Password{{/trans}}</label>
						    <input type="password" name="pass1" class="form-control">
						</div>
						<div class="form-group">
						   <label>{{#trans}}Re-type New Password{{/trans}}</label>
						    <input type="password" name="pass2" class="form-control">
						</div>
						
						<button type="submit" class="btn green">{{#trans}}Change Password{{/trans}}</button>
						<a href="#" class="btn">{{#trans}}Cancel{{/trans}}</a>
						<span class="loadingafter"></span>
					</form>

				</div>
			</div>
		</div>
		{{/authorized.ACCOUNT_SETTINGS}}
		
		<div class="alert alert-info">{{#trans}}Profile type{{/trans}}: <strong>{{user.role.name}}</strong></div>
		
	</div>
		
	<div class="col-sm-6 col-md-5">
		<div class="tab-content">
			<div id="tab_1-1" class="tab-pane active">
				<div style="height: auto;">
					
					<h3>{{#trans}}Your Profile{{/trans}}</h3>

					<form role="form" id="edit-user-profile">
						<div class="form-group">
						    <label>{{#trans}}First Name{{/trans}}</label>
						    <input name="firstname" type="text" placeholder="John" class="form-control" value="{{user.firstname}}" 
						{{^authorized.ACCOUNT_SETTINGS}}disabled{{/authorized.ACCOUNT_SETTINGS}}/>
						</div>
						<div class="form-group">
						    <label>{{#trans}}Last Name{{/trans}}</label>
						    <input name="name" type="text" placeholder="Dow" class="form-control" value="{{user.name}}" 
						{{^authorized.ACCOUNT_SETTINGS}}disabled{{/authorized.ACCOUNT_SETTINGS}}/>
						</div>
						<div class="form-group">
						    <label>{{#trans}}Mobile Phone{{/trans}}</label>
						    <input name="mobile" type="text" placeholder="" class="form-control" value="{{user.mobile}}" 
						{{^authorized.ACCOUNT_SETTINGS}}disabled{{/authorized.ACCOUNT_SETTINGS}}/>
						</div>

						<div class="form-group row">
							<div class="col-md-6">
								<label>{{#trans}}Language{{/trans}}</label>
								<select name="locale"class="form-control" {{^authorized.ACCOUNT_SETTINGS}}disabled{{/authorized.ACCOUNT_SETTINGS}}>
									{{#langs}}
										<option value="{{id}}">{{name}}</option>
									{{/langs}}
								</select>
							</div>
						</div>
						
						{{#authorized.ACCOUNT_SETTINGS}}
							<button type="submit" class="btn green">{{#trans}}Save changes{{/trans}}</button>
							<button type="reset" class="btn" disabled="true">{{#trans}}Cancel{{/trans}}</button>
							<span class="loadingafter"></span>
						{{/authorized.ACCOUNT_SETTINGS}}
					</form>

				</div>
			</div>
			
		</div>
	</div>                                  

</div>

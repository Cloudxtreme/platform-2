<table>
	<tbody>
		<tr>
		{{#columns}}
			<td class="stats-summary-column {{#extended}}column-extended{{/extended}}" data-type="{{func}}">
				<span class="stats-summary-title">{{title}}</span>
				<div class="stats-summary-counter">{{counter}}</div>
				{{#extended}}
					<div class="column-extended-counters">
					{{#counters}}
						<div class="stats-summary-counter">{{counter}}</div>
					{{/counters}}
					</div>
				{{/extended}}
			</td>
		{{/columns}}
		</tr>
	</tbody>
</table>

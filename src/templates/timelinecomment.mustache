
{{#from}}
	<img class="avatar viewdetails viewcommentcontact" alt="" src="{{avatar}}">
	<strong><a class="viewdetails viewcommentcontact">{{displayname}}</a></strong>
{{/from}}

<div class="inline-actions pull-right hidden">
	{{#actions}}
		<div class="notification-action" data-notification-action="{{token}}"><i class="fa fa-{{icon}}"></i></div>
	{{/actions}}
</div>

{{#attachments}}
	{{#image}}
		<img src="{{url}}" class="pull-right attachment-image" alt="{{name}}" />
	{{/image}}
{{/attachments}}

{{#attachments}}
	{{#link}}
		<div class="attachment-link">
			<i class="fa fa-link"></i> <a href="{{url}}" target="_blank">{{shortlink}}</a>
		</div>
	{{/link}}
{{/attachments}}

{{#fulldate}}
<div class="comment-info pull-right">{{fulldate}}</div>
{{/fulldate}}
{{^fulldate}}
<i class="fa fa-cloud-download"></i>
{{/fulldate}}

{{{body.html}}}
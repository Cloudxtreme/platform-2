<div class="message-header {{icon}}-color" data-id="{{id}}">
	{{#from}}
	<div class="pull-right">
		<span class="date">{{fulldate}}</span>
		<i class="fa fa-{{icon}}"></i>
	</div>
	
		{{#notification}}
			<a class="avatar" href="{{url}}" target="_blank" alt="{{displayname}}" style="background-image:url({{avatar}})"></a>
			<div class="username">
				<strong> <a class="viewdetails" href="{{url}}" target="_blank">{{displayname}}</a> </strong>
				<br /><em>{{#trans}}on{{/trans}} {{networkdescription}}</em>
			</div>
		{{/notification}}

		{{^notification}}
			<div class="avatar viewdetails" data-action="viewcontact" alt="{{displayname}}" style="background-image:url({{avatar}})"></div>
			<div class="username">
				<strong> <a class="viewdetails" data-action="viewcontact">{{displayname}}</a> </strong>
				<br /><em>{{#trans}}on{{/trans}} {{networkdescription}}</em>
			</div>
		{{/notification}}		
	
	{{/from}}
</div>

<div class="message-body">
	{{#attached.image}}
		<img src="{{url}}" class="pull-right attachment-image" alt="{{name}}" />
	{{/attached.image}}
	
	{{#attached.video}}
		<div class="pull-right inbox-video youtube-video inactive" href="{{url}}?rel=0&amp;wmode=transparent" style="background-image: url({{image}});"></div>
	{{/attached.video}}
	
	{{{body.html}}}
	
	{{#attached.link}}
		<div class="attachment-link">
			<i class="fa fa-link"></i> <a href="{{url}}" target="_blank">{{shortlink}}</a>
		</div>
	{{/attached.link}}
	<div class="clearfix"></div>
</div>
{{^display}}
<div class="message-actions"></div>
{{/display}}

<!-- NOTES_ROLE -->
<div class="message-sub-actions">
	<div class="note-content"></div>
	<div class="action-lists">
	</div>
</div>


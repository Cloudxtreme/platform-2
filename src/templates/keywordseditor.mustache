	<!-- Add Category -->
	<div class="portlet box grey addcategory">
		<div class="portlet-title line">
			<div class="caption"><i class="icon-plus"></i>{{#trans}}Add category{{/trans}}</div>
			<div class="tools">
				<i class="icon-cloud-upload" style="display: none;"></i>
			</div>
		</div>
		<div class="portlet-body">
			<form data-add-category="1">
				<label for="category_create_name">{{#trans}}Name{{/trans}}:</label>
				
				<input type="text" id="category_create_name" name="name" class="m-wrap span7" required />

				<span style="display:none;">
				<label for="category_create_remember">{{#trans}}Remember for{{/trans}}:</label>
				<input type="text" id="category_create_remember" name="remind" class="m-wrap span7" /><span>{{#trans}}days{{/trans}}</span>
				</span>
				<button class="btn blue span4 pull-right" type="submit">{{#trans}}Create{{/trans}}</button>
				
			</form>
		</div>
	</div>
	<!-- end Add Category -->
	
	<!-- Manage keyword -->
	<div id="keywordsfilter" class="portlet box blue managekeyword">
		<div class="portlet-title line add-keyword">
			<div class="caption"><i class="icon-tag"></i>{{#trans}}Add keyword{{/trans}}</div>
			<div class="tools">
				<i class="icon-cloud-upload" style="display: none;"></i>
			</div>
		</div>
		<div class="portlet-title line edit-keyword inactive">
			<div class="caption"><i class="icon-tag"></i>{{#trans}}Manage keyword{{/trans}}</div>
			<div class="tools">
				<i class="icon-cloud-upload" style="display: none;"></i>
			</div>
		</div>
		
		<div class="portlet-body manage-keyword">
			<form data-keyword="true">
				
				<label for="keyword_manage_category">{{#trans}}Category{{/trans}}:</label>
				<select id="keyword_manage_category">
					<option value="0">{{#trans}}select category...{{/trans}}</option>
					{{#categories}}
						<option value="{{id}}">{{attributes.name}}</option>
					{{/categories}}
				</select>
				
				<label for="keyword_manage_name">{{#trans}}Name{{/trans}}:</label>
				<input type="text" value="" placeholder="{{#trans}}keyword name{{/trans}}" id="keyword_manage_name" name="name" class="m-wrap span12" />
				<br><br>
				
				<label>{{#trans}}Fine-tune{{/trans}}</labl>
				<!--<input type="text" value="" placeholder="Fine-tune formula" id="filter_formula" name="name" class="m-wrap span12" />-->
				<!--deprecated-->
				<label>{{#trans}}Filters{{/trans}}:</label>
				<div class="input-symbol" data-option="fullbody">
					<div class="container-loading hidden"><i class="icon-cloud-download"></i></div>
					<section contenteditable="false" spellcheck="true" role="textbox" id="keyword_filter" data-option="body" class="m-wrap span12 keywordeditarea">
						<span id="demo_plus" class="demo_bubble demo_drop demo_hit_me">
							<span class="demo_hit_me">+</spam>
							<span class="demo_options">
								<ul>
									<li class="add_message_contains" data-value="message contains">{{#trans}}message contains{{/trans}}</li>
									<li class="add_message_no_contains" data-value="message !contains">{{#trans}}message doesnt contain{{/trans}}</li>
									<li class="add_author_is hidden" data-value="author =">{{#trans}}author is{{/trans}}</li>
									<li class="add_author_is_not hidden" data-value="author !=">{{#trans}}author is not{{/trans}}</li>
									<li class="add_country_is" data-value="county =">{{#trans}}country is{{/trans}}</li>
									<li class="add_country_is_not" data-value="county =">{{#trans}}country is not{{/trans}}</li>
									<li class="add_language_is" data-value="language =">{{#trans}}language is{{/trans}}</li>
									<li class="add_language_is_not" data-value="language =">{{#trans}}language is not{{/trans}}</li>
									<li class="add_group" data-value="(">{{#trans}}group{{/trans}}</li>
								</ul>
							</span>
						</span>
					</section>
				</div>
				<br><br>

				<button class="btn blue add-keyword" onclick="return false;" data-option="submit">{{#trans}}Create{{/trans}}</button>
				<button class="btn blue update-keyword edit-keyword inactive" data-option="update">{{#trans}}Update{{/trans}}</button>
				
				<button class="btn cancel-edit-keyword edit-keyword inactive">{{#trans}}Cancel{{/trans}}</button>
				<button class="btn reset-keyword" onclick="return false;">{{#trans}}Reset{{/trans}}</button>
				
			</form>
			<div id="keyword_warning"></div>
		</div>
	</div>
	

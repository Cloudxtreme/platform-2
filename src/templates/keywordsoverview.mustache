<div class="portlet box blue keywordsoverview">
	<div class="portlet-title line">
		<div class="caption">
			<i class="icon-tasks"></i> {{#trans}}Categories overview{{/trans}}
		</div>
	</div>

	<div class="portlet-body social-icon-colors">
		<ul class="messages-container">
		{{#categories}}
			<li data-category="{{id}}">
				
				<div class="pull-right">
					{{#authorized.CHANNEL_MANAGE_EDIT_MONITORING}}
						<i class="icon-edit-sign icon-2x  edit-toggler"></i>
					{{/authorized.CHANNEL_MANAGE_EDIT_MONITORING}}
					{{#authorized.CHANNEL_MANAGE_DELETE_MONITORING}}
						<i class="icon-remove icon-2x delete-category"></i>
					{{/authorized.CHANNEL_MANAGE_DELETE_MONITORING}}
				</div>
				
				<span class="category-name {{#authorized.CHANNEL_MANAGE_EDIT_MONITORING}}edit-toggler{{/authorized.CHANNEL_MANAGE_EDIT_MONITORING}}"><h4 class="name_val">{{name}}</h4></span>
				{{#settings.remember}}<span class="category-name category-remember {{#authorized.CHANNEL_MANAGE_EDIT_MONITORING}}edit-toggler{{/authorized.CHANNEL_MANAGE_EDIT_MONITORING}}">{{#trans}}Remember for{{/trans}} <span class="remember_val">{{settings.remember}}</span> {{#trans}}days{{/trans}}</span>{{/settings.remember}}
				{{#authorized.CHANNEL_MANAGE_EDIT_MONITORING}}
					<span class="category-edit border-left" style="display: none;">
						<form>
							<span class="edit_name"><input type="text" value="{{name}}" name="name" /><button class="btn blue edit-toggler" type="submit">{{#trans}}Save changes{{/trans}}</button></span>
							{{#settings.remember}}<span class="edit_remember">{{#trans}}Remember for{{/trans}} <input type="text" value="{{settings.remember}}" name="remember" /> {{#trans}}days{{/trans}}</span>{{/settings.remember}}
						</form>
					</span>
				{{/authorized.CHANNEL_MANAGE_EDIT_MONITORING}}

			</li>
			<li>
				<ul>
					{{#keywords}}
						<li data-keyword="{{id}}">
							<i class="icon-tag icon-muted"></i>
							{{attributes.name}}
							{{#authorized.CHANNEL_MANAGE_EDIT_MONITORING}}
								<i class="icon-remove pull-right delete-keyword"></i>
							{{/authorized.CHANNEL_MANAGE_EDIT_MONITORING}}
						</li>
					{{/keywords}}
				</ul>
				<div class="clear"></div>
			</li>
		{{/categories}}
		</ul>
	</div>
</div>